function _fundraiser_sustainers_get_total_sustainers_by_nid($nid, $start = FALSE, $end = FALSE) {
  static $data = array();
  if (module_exists('fundraiser_commerce')) {
    if (empty($data[$nid])) {
      // SELECT COUNT(DISTINCT(s.master_did))
      // FROM fundraiser_sustainers s
