function fundraiser_webform_submission_update($node, $submission) {
  if ($node->type == 'donation_form') {
    if ($order_id = db_result(db_query("SELECT order_id FROM {fundraiser_webform_order} WHERE webform_nid = %d AND sid = %d", $node->nid, $submission->sid))) {
