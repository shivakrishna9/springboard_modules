/**
 * Access callback, determines if the "clone" link should be displayed on a donation form.
 */
function fundraiser_access_clone() {
  global $user;
  $nid = arg(1);

  if (is_numeric($nid)) {
    $type = db_result(db_query('SELECT type FROM {node} WHERE nid = %d', $nid));
    if (user_access('clone donation form') && !strcmp($type, 'donation_form')) { 
      return TRUE;
    }
  }
  return FALSE;
}

