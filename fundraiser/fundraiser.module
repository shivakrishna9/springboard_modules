function fundraiser_secure_confirmation_flag($sid) {
  if (!db_result(db_query('SELECT count(sid) FROM {fundraiser_secure} WHERE sid=%d', $sid))) {
    db_query('INSERT INTO {fundraiser_secure} (sid) VALUES (%s)', $sid);
  }
}
