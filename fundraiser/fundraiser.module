/**
 * Implementation of hook_acces().
 */
function fundraiser_access($op, $node, $account) {
  $is_author = $account->uid == $node->uid;
  switch ($op) {
    case 'create':
      return user_access('create donation form', $account);
    case 'update':
      return user_access('edit own donation form', $account) && $is_author || user_access('edit any donation form', $account);
    case 'delete':
      return user_access('delete own donation form', $account) && $is_author || user_access('delete any donation form', $account);
  }
}

