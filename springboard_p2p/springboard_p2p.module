    // Global p2p css file - nodes, p2p reg, p2p donation.
    if ((!empty($node) && in_array($node->type, $node_types)) || (isset($p2p_path)) || (isset($p2p_form_path))) {

      $p2p_css = array(
        '#attached' => array(
