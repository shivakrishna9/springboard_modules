  // Preprocess views.
  $view = $vars['view'];

  // Add custom scripts for the the cards view.
  if ($view->name == 'p2p_search_for_a_campaign') {
    // Add the p2p-page-type body class to this view.
    $vars['classes_array'][] = 'p2p-page-type';
  }

