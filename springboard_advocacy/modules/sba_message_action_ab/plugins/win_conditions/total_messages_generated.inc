<?php

/**
 * @file
 * Provide a Multivariate Testing win condition: Total messages generated
 */

// Plugin details
$plugin = array(
  'title' => t('Total Messages Generated'),
  'description' => t('This many messages must be generated by a webform before it is declared the winner.'),
  'config form' => 'sba_message_action_ab_total_messages_generated_config',
  'config form validation' => 'sba_message_action_ab_total_messages_generated_config_validate',
  'config summary' => 'sba_message_action_ab_total_messages_generated_config_summary',
  'current value' => 'sba_message_action_ab_total_messages_generated_current_value',
  'check criteria' => 'sba_message_action_ab_total_messages_generated_check_win',
);


/**
 * Return the config options form for this win condition
 *
 * @param $current_config
 *   Array containing current config options (if set). Default values for form
 *   elements should come from here.
 */
function sba_message_action_ab_total_messages_generated_config($current_config) {
  $form = array();
  $form['messages_generated'] = array(
    '#type' => 'textfield',
    '#title' => t('Number of Messages Generated'),
    '#description' => t(''),
    '#size' => 10,
    '#maxlength' => 255,
    '#default_value' => isset($current_config['messages_generated']) ? $current_config['messages_generated'] : '',
  );
  return $form;
}


/**
 * Validate the config for this plugin
 */
function sba_message_action_ab_total_messages_generated_config_validate($config, $field_name_prefix) {
  if (!ctype_digit($config['messages_generated']) || !($config['messages_generated'] > 0)) {
    form_set_error($field_name_prefix . 'messages_generated', t('Please enter an integer for the Number of Messages Generated win condition.'));
  }
  return TRUE;
}


/**
 * Return a summary of the plugin config, for listing on the admin view of a
 * Multivariate test node
 */
function sba_message_action_ab_total_messages_generated_config_summary($config) {
  return $config['messages_generated'];
}

function sba_message_action_ab_total_messages_generated_current_value($webform_nid, $config, $test_node) {
  $sum = 0;
  $message_query = db_query("SELECT DISTINCT d.data, d.sid FROM {webform_submitted_data} d, {webform_component} c " .
    "WHERE d.nid = :webform_nid AND d.cid = c.cid AND c.form_key = 'sba_deliverable_count'",
    array(':webform_nid' => $webform_nid));
  foreach ($message_query as $data) {
    if (is_numeric($data->data)) {
      $sum += $data->data;
    }  
  }
  return $sum;
}

/**
 * Check if the given Multivariate test node has a winner
 *
 * @param $config
 *   Array of config options for this plugin for the Multivariate test being
 *   checked for a win. In this case, the array will contain 'conversions'
 * @param $webform_details
 *   Array of info about the webform to check.
 * @param $test_node
 *   Multivariate test node
 */
function sba_message_action_ab_total_messages_generated_check_win($config, $webform_details, $test_node) {
  return isset($webform_details['messages_generated']) ? $webform_details['messages_generated'] >= $config['messages_generated'] : FALSE;
}
