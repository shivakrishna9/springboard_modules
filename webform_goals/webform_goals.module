/**
 * Load a goal from the db.
 * @param int $gid
 * Goal id
 *
 * @return array
 * Returns an associative array containing goal settings.
 */
function webform_goal_load($gid) {
  $result = db_query('
    SELECT
      gid,
      name,
      context,
      metric,
      target_value,
      seed,
      display_threshold,
      starter_message,
      starter_message_format,
      start_date,
      end_date,
      auto_expire,
      progress_bar,
      template,
      template_format,
      extra
    FROM {webform_goals}
    WHERE gid = :gid
  ', array(':gid' => $gid));
  $goal = $result->fetchAssoc();
  if (!empty($goal['extra'])) {
    $goal['extra'] = unserialize($goal['extra']);
  }
  // TODO: convert timestamps?
  return $goal;
}

/**
 *
 * @staticvar array $goals
 * @param int $nid
 * Node id.
 *
 * @return array()
 * An array of goals.
 */
function webform_goal_load_multiple($nid = FALSE) {
  static $goals = array();

  if (($nid && empty($goals[$nid])) || empty($goals)) {
    $query = db_select('webform_goals', 'w');

    if (!empty($nid)) {
      $query->join('webform_goals_node', 'n', 'w.gid = n.gid');
      $query->condition('n.nid', $nid, '=');
    }
    $query->fields('w');
    $result = $query->execute();
    while ($goal = $result->fetchAssoc()) {
      $goal['extra'] = unserialize($goal['extra']);
      if ($nid) {
        $goals[$nid][] = $goal;
      }
      else {
        $goals[] = $goal;
      }
    }
  }
  return ($nid && !empty($goals[$nid])) ? $goals[$nid] : $goals;
}


/**
 * Save a goal.
 *
 * Saves goal settings, updates the goal widget file, goal progress tracking,
 * and updates the record of nodes associated with this goal, as applicable.
 *
 * @param array $goal
 *   Goal settings array.
 */
function webform_goals_save_goal($goal) {

  $update = $goal['gid'] ? 'gid' : array();
  $extra = $goal['extra'];
  $goal['extra'] = serialize($extra);
  // Save goal settings.
  drupal_write_record('webform_goals', $goal, $update);

  $goal['extra'] = $extra;
  $nid = !empty($extra['selected_form_id']) ? $extra['selected_form_id'] : 0;

  // Save widget file.
  webform_goals_save_widget($goal, $nid, $update);

  // Save node ids associated with goal.
  webform_goals_save_goal_nids($goal);
  return $goal;
}

/**
 * Save Goal widget to file and db.
 *
 * @param array $goal
 *   Goal settings array.
 *
 * @param int $nid
 *   Node id.
 *
 * @param mixed $update
 */
function webform_goals_save_widget($goal, $nid, $update) {
  module_load_include('inc', 'webform_goals', 'includes/webform_goals.files');
  $theme_args = array(
    'webform_goal' => $goal,
    'nid' => $nid,
    'goal_progress' => webform_goals_track_metric($goal),
  );
  $widget = array(
    'gid' => $goal['gid'],
    'widget' => theme('webform_goals_widget', $theme_args),
  );
  drupal_write_record('webform_goals_widget', $widget, $update);
  _webform_goals_file_insert($goal, $widget['widget']);
}

/**
 * Save node ids associated with a goal.
 *
 * @param array $goal
 *   Goal settings array.
 */
function webform_goals_save_goal_nids($goal) {
  $nids = _webform_goals_calculate_nids_for_goal($goal);

  // Remove the relevant rows from {webform_goals_node}
  // and add new rows.
  // We need to do this to update the nodes selected if they change
  // during a goal edit.
  db_delete('webform_goals_node')
    ->condition('gid', $goal['gid'])
    ->execute();
  $query = db_insert('webform_goals_node')->fields(array('gid', 'nid'));
  foreach ($nids as $nid) {
    $query->values(array(
      'gid' => $goal['gid'],
      'nid' => $nid,
    ));
  }
  $query->execute();
}

/**
 * Delete goal records and associated widget files.
 *
 * @param int $gid
 *   Goal ID.
 */
function webform_goals_delete_goal($gid) {
  require_once 'includes/webform_goals.files.inc';

  db_query("DELETE FROM {webform_goals} WHERE gid = :gid", array(':gid' => $gid));
  db_query("DELETE FROM {webform_goals_node} WHERE gid = :gid", array(':gid' => $gid));
  db_query("DELETE FROM {webform_goals_widget} WHERE gid = :gid", array(':gid' => $gid));

  $path = _webform_goals_base_path();
  $uri = $path . '/template-' . $gid . '.txt';

  file_unmanaged_delete($uri);
  webform_goals_quick_goal_delete(NULL, $gid);
}

function webform_goals_widget_load($gid) {
  $widget = db_query('SELECT widget FROM {webform_goals_widget} WHERE gid = :gid', array(':gid' => $gid));
  return $widget->fetchField();
}

/**
 * Creates an array for select #options of webform enabled nodes.
 *
 * Organized by node type.
 *
 * @return array|bool
 *   A multidimensional array keyed by node type and nid.
 */
function _webform_goals_list_webforms() {
  static $nodes = array();
  if (!count($nodes)) {
    $types = webform_variable_get('webform_node_types');
    $readable_types = webform_goals_get_readable_types($types);

    $results = db_query('
      SELECT nid, title, type FROM {node} WHERE type IN(:types)
    ', array(':types' => $types));
    while ($result = $results->fetchAssoc()) {
      $internal_name = '';
      // If it's a fundraiser enabled node, load it to get the internal name.
      if (fundraiser_is_donation_type($result['type'])) {
        $node = node_load($result['nid']);
        $node_wrapper = entity_metadata_wrapper('node', $node);
        $internal_name = ' - ' . $node_wrapper->field_fundraiser_internal_name->value(array('sanitize' => TRUE));
      }
      $readable_type = $readable_types[$result['type']];
      $nodes[$readable_type][$result['nid']] = '(' . $result['nid'] . ') ' . $result['title'] . $internal_name . ' - ' . $readable_type;
    }
  }

  return count($nodes) ? $nodes : FALSE;
}

/**
 * Gets the human readable type names for the given machine type names.
 *
 * @param array $types
 *   machine names
 *
 * @return array
 *   machine name => display name
 */
function webform_goals_get_readable_types($types) {
  $return = array();
  $results = db_query("SELECT type, name FROM {node_type} WHERE type IN (:types)", array(':types' => $types));
  foreach ($results as $result) {
    $return[$result->type] = $result->name;
  }

  return $return;
}

function _webform_goals_field_list($nid) {
  $fields = array();
  $results = db_query('
    SELECT
      form_key,
      name
    FROM {webform_component}
    WHERE
      nid = :nid
    AND
      type NOT IN (:types)
  ', array(':nid' => $nid, ':types' => array('hidden', 'fieldset')));

  while ($result = $results->fetchAssoc()) {
    $fields[$result['form_key']] = $result['name'];
  }
  return $fields;
}

