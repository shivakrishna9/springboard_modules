            'value' => '%' . $filter_value . '%',
            'operator' => 'LIKE',
          );
          break;
        case 'sbp_search_engine_value':
          $query->where[1]['conditions'][] = array(
            'field' => 'users_fundraiser_donation__field_data_sbp_search_engine.sbp_search_engine_value',
            'value' => '%' . $filter_value . '%',
            'operator' => 'LIKE',
          );
          break;
        case 'sbp_search_string_value':
          $query->where[1]['conditions'][] = array(
            'field' => 'users_fundraiser_donation__field_data_sbp_search_string.sbp_search_string_value',
            'value' => '%' . $filter_value . '%',
            'operator' => 'LIKE',
          );
          break;
        case 'sbp_user_agent_value':
          $query->where[1]['conditions'][] = array(
            'field' => 'users_fundraiser_donation__field_data_sbp_user_agent.sbp_user_agent_value',
            'value' => '%' . $filter_value . '%',
            'operator' => 'LIKE',
          );
          break;
        case 'status':
          $query->add_where(1, 'fundraiser_donation.status', $filter_value, '=');
          break;
        case 'sid':
          $query->where[1]['conditions'][] = array(
            'field' => 'webform_submissions_fundraiser_donation.sid',
            'value' => $filter_value,
            'operator' => '=',
          );
          break;
        case 'txn_id':
          $query->where[1]['conditions'][] = array(
            'field' => 'fundraiser_donation.txn_id',
            'value' => $filter_value,
            'operator' => '=',
          );
          break;
      }
    }
  }

  //print_r($query);
  // Remove query filters set to %%, which were added to the view to allow query-based filtering to work:
  foreach ($query->where[1]['conditions'] as $key => $condition_data) {
    if ($condition_data['value'] == '%%' || $condition_data['value'] == '') {
      unset($query->where[1]['conditions'][$key]);
    }
  }
}

/**
 * sbv_donations data export queue AJAX callback.
 */
function _springboard_views_data_export_queue() {
  if (!isset($_POST) || empty($_POST)) {
    drupal_json_output(array('status' => 'fail'));
    return;
  }

  $data = $_POST['export_params'];

  if (isset($_POST['date_range_min'])) {
    $data['transaction_date']['min'] = $_POST['date_range_min'];
  }
  if (isset($_POST['date_range_max'])) {
    $data['transaction_date']['max'] = $_POST['date_range_max'];
  }

  watchdog('springboard_views', 'CSV export request: ' . json_encode($data));

  $recipients = array(
    'josh.estep@jacksonriver.com',
  );

  // Queue the data export job:
  $success = TRUE;
  //$success = springboard_dw_csv_export_insert('Drupal', $data, $recipients);

  // Return status to jQuery:
  
  drupal_json_output(array('status' => $success ? 'success' : 'fail'));
}
