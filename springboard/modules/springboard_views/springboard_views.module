/**
 * Implements hook_views_pre_view().
 *
 * Remove the exposed date popup filter from the file export display to
 * eliminate a conflict between the popup and views_data_export:
 */
function springboard_views_views_pre_view(&$view, &$display_id, &$args) {
  if ($view->name != 'sbv_donations' || $display_id != 'views_data_export_1') {
    return;
  }

  // Unset the date filter form both the default and export displays in case
  // the default date filter is overwritten within the data export's display:
  unset($view->display['default']->handler->options['filters']['date_filter']);
  unset($view->display['views_data_export_1']->handler->options['filters']['date_filter']);
}

/**
 * Implements hook_views_query_alter().
 *
 * Apply date_popup-based filtering to the donations report's data export display, as filtering
 * by date can result in date formatting errors depending on the site's current, short date format.
 */
function springboard_views_views_query_alter(&$view, &$query) {
  if ($view->name != 'sbv_donations' || $view->current_display != 'views_data_export_1') {
    return;
  }

  // Apply sort and order from the drush sb-export-donations-csv (drush sb-edc) command:
  if (isset($view->drush_order) && isset($view->drush_sort)) {
    $sort = $view->drush_sort;
    $order_by = $view->drush_order;
    $view->query->orderby = array(array(
      'field' => $order_by,
      'direction' => $sort,
    ));
  }

  // Apply filters from the drush sb-export-donations-csv (drush sb-edc) command:
  if (isset($view->drush_filters) && is_array($view->drush_filters)) {
    foreach ($view->drush_filters as $filter_key => $filter_value) {
      switch ($filter_key) {
        case 'amount':
          $query->add_where(1, 'fundraiser_donation.amount', $filter_value, '=');
          break;
        case 'currency':
          $query->add_where(1, 'fundraiser_donation.currency', $filter_value, '=');
          break;
        case 'field_fundraiser_internal_name_value':
          $query->where[1]['conditions'][] = array(
            'field' => 'node_fundraiser_donation__field_data_field_fundraiser_internal_name.field_fundraiser_internal_name_value',
            'value' => '%' . $filter_value . '%',
            'operator' => LIKE,
          );
          break;
        case 'gateway':
          $query->add_where(1, 'fundraiser_donation.gateway', '%' . $filter_value . '%', 'LIKE');
          break;
        case 'hostname':
          $query->add_where(1, 'commerce_order_fundraiser_donation.hostname', '%' . $filter_value . '%', 'LIKE');
          break;
        case 'did':
          $query->add_where(1, 'fundraiser_donation.did', $filter_value, '=');
          break;
        case 'nid':
          $query->add_where(1, 'fundraiser_donation.nid', $filter_value, '=');
          break;
        case 'mail':
          $query->add_where(1, 'commerce_order_fundraiser_donation.mail', '%' . $filter_value . '%', 'LIKE');
          break;
        case 'sbp_device_browser_value':
          $query->where[1]['conditions'][] = array(
